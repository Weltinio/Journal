* {
    box-sizing: border-box;
    margin: 0px;
    padding: 0px;
}

body {
    background-image: url(<%= asset_path 'Background.jpg' %>);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    height: 100vh;
    width: 100vw;
    color: whitesmoke
}

.navbar, 
.navbar-expand {
    background-color: #343A40;
}

.nav-link {
    text-decoration: none;
    background-color: whitesmoke;
    border-radius: 5px;
    font-size: 15px;
    color: blue;
}

#edit-profile-btn {
    color: blue;
    text-decoration: none;
}

.hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: whitesmoke;
}

.hero-title {
    margin-top: 20px;
}

.description {
    font-size: 30px;
    margin-top: 10%;
}

footer {
    margin-top: 250px;
}

.login-cont,
.cont {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    text-align: center;
}

#form-cont {
    align-items: center;
    justify-content: center;
}

h2 {
    text-align: center;
    color: whitesmoke;
}

.form-check-label {
    color: whitesmoke;
}

.link-info {
    color: whitesmoke;
}

.form-label {
    color: whitesmoke;
}

#action-cont {
    align-items: center;
    justify-content: center;
}

.actions {
    margin-top: 10px;
    margin-bottom: 5px;
}

#edit-cont {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.form-control {
    margin-bottom: 5px;
}

.table-content {
    text-align: center;
}

.table-actions {
    display: flex;
    justify-content: space-around;
}

#new-cat-btn,
#new-task-btn {
    margin-bottom: 10px;
}

table {
    max-width: 800px;
}

#cat-title,
#edit-title,
#new-task {
    font-size: 40px;
    color: whitesmoke
}

#edit-text {
    text-align: center
}

#submit-btn {
    margin-top: 10px
}

#unhappy,
h3 {
    text-align: center
}

#update-btn {
    margin-bottom: 30px
}

em,
i,
p,
h1,
h5 {
    color: whitesmoke
}